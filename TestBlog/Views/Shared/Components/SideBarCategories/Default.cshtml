@model List<Category>

<div class="card rounded-2">
	<div class="card-body bg-dark bg-gradient rounded">
		<div class="text-center">
			<h4 class="mt-3 text-light display-6">Kategoriler</h4>
			<hr>
			<ul class="navbar-nav flex-grow-1">
				@foreach (var category in Model)
				{
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Posts" asp-route-categoryId="@category.CategoryId">@category.Name</a>
					</li>
				}
			</ul>
		</div>
	</div>
</div>