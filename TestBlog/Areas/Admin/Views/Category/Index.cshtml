@model List<Category>

<div class="row">
	<div class="col-md-12">
		<h1 class="text-center mb-4">Kategoriler</h1>
		

		<div class="col-md-12 col-sm-4 d-flex flex-row-reverse pb-1">
		<a asp-action="New" class="btn btn-success btn-sm">Ekle</a>
		</div>
		<table class="table table-hover table-bordered table-responsive">
			<thead class="thead-dark">
				<tr>
					<th scope="col" width="80">Id</th>
					<th scope="col">Kategori İsmi</th>
					<th scope="col" width="172" class="text-center">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td>@category.CategoryId</td>
						<td>@category.Name</td>
						<td class="d-flex mr-2">
							<a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm text-light me-1">Düzenle</a>
							@using (Html.BeginForm(actionName: "Delete", controllerName: "Category", FormMethod.Post))
							{
								<input type="hidden" name="categoryId" value="@category.CategoryId" />
								<button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek İstediğinize Eminmisiniz?');">
									Sil?
								</button>
							}
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>




